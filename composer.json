{
  "name": "vecode/moritabox-smtp",
  "description": "MoritaBox SMTP Server",
  "version": "1.2",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "biohzrdmx",
      "email": "hi@biohzrdmx.me",
      "homepage": "https://biohzrdmx.me"
    }
  ],
  "require": {
    "php": ">=8.1",
    "react/socket": "^1.13"
  },
  "require-dev": {},
  "autoload": {
    "psr-4": {
      "MoritaBox\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MoritaBox\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "analyse": "phpstan analyse --configuration phpstan.neon --memory-limit 1G --level 7 src",
    "coverage": "phpunit --coverage-text",
    "test": "phpunit --testdox"
  },
  "minimum-stability": "stable"
}
